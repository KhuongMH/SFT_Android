<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2196F3"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:id="@+id/top_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/iv_navigation"
                    android:layout_width="@dimen/layout_icon"
                    android:layout_height="@dimen/layout_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_navigation" />

                <ImageView
                    android:id="@+id/ic_user"
                    android:layout_width="@dimen/layout_icon"
                    android:layout_height="@dimen/layout_icon"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/white_user"
                    android:visibility="gone"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top_tab"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout1"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E3F2FD">
                            <ImageView
                                android:id="@+id/icon1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_lib"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/icon1"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/mainpage_font"
                                android:textColor="#757575"
                                android:text="Kiến Thức Nông Nghiệp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E0F7FA">

                            <ImageView
                                android:id="@+id/icon2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_price"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/icon2"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/mainpage_font"
                                android:textColor="#757575"
                                android:text="Giá Cả Thị Trường"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout1"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E0F7FA">

                            <ImageView
                                android:id="@+id/icon3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_trade"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/icon3"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/mainpage_font"
                                android:textColor="#757575"
                                android:text="Buôn Bán Nông Sản"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E3F2FD">

                            <ImageView
                                android:id="@+id/icon4"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_qa"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/icon4"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/mainpage_font"
                                android:textColor="#757575"
                                android:text="Hỏi Đáp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@+id/layout2"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E3F2FD">

                            <ImageView
                                android:id="@+id/icon5"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_owntree"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/icon5"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/mainpage_font"
                                android:textColor="#757575"
                                android:text="Khu Vườn Của Bạn"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E0F7FA">

                            <ImageView
                                android:id="@+id/icon6"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_grab"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/icon6"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/mainpage_font"
                                android:textColor="#757575"
                                android:text="Grab Đi Chợ"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_left_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/background_navigation"
        android:choiceMode="singleChoice"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:background="#E0F7FA">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="This Is Title"/>
        </LinearLayout>
        <ListView
            android:id="@+id/lv_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#E0F7FA"
            android:choiceMode="singleChoice"
            android:divider="#9E9E9E"
            android:dividerHeight="1px"/>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>